FROM arm64v8/node:20.9.0-buster

ARG TOKEN
ARG CLIENTID
ARG GUILDID
ARG DATABASE_URL
ARG NEISKEY
ARG GITHUBTOKEN

ENV TOKEN=$TOKEN
ENV CLIENTID=$CLIENTID
ENV GUILDID=$GUILDID
ENV DATABASE_URL=$DATABASE_URL
ENV NEISKEY=$NEISKEY
ENV GITHUBTOKEN=$GITHUBTOKEN

WORKDIR /

RUN npm install

CMD ["node", "main.js"]
